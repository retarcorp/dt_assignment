  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.137",
    "@types/node": "^20.12.5",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.2",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "env-cmd": "^10.1.0"
  }
}
